{% trans_default_domain 'FOSUserBundle' %}

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center h-100">
            <div class="card-wrapper">
                <div class="brand text-center">
                    <h1>
                        <i class="fas fa-user"></i>
                        <br>
                        {{ app.user.username }}
                    </h1>
                </div>
                <div class="card fat">
                    <div class="card-body">
                        <h4 class="card-title">{{ 'profile.edit.submit'|trans }}</h4>
                        {{ form_start(form) }}
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger alert-dismissible fade show register-errors">
                                <button type="button" class="close" data-dismiss="alert">
                                    <i class="fas fa-times"></i>
                                </button>
                                {{ form_errors(form.username) }}
                                {{ form_errors(form.email) }}
                                {{ form_errors(form.current_password) }}
                            </div>
                        {% endif %}

                        <div class="form-group">
                            {{ form_label(form.username, 'form.username'|trans) }}
                            {{ form_widget(form.username, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, 'form.email'|trans) }}
                            {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.current_password, 'form.current_password'|trans) }}
                            {{ form_widget(form.current_password, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary btn-block"/>

                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="footer">
                    <span class="copyleft">&copy;</span> {{ 'now'|date('Y') }} - storybookmarks
                </div>
            </div>
        </div>
    </div>
</section>
