{% extends 'base.html.twig' %}

{% block html_class %}error-500{% endblock %}

{% block body_class %}error-500{% endblock %}

{% block body %}
    {{ include('::_navbar.html.twig') }}
    <div class="container mt-5">
        <section class="pt-5">
            <div class="text-center mt-3 mb-5">
                <img src="{{ asset('images/unhappy.svg') }}" alt="storybookmarks | 500" class="w-25">
            </div>
            <h1 class="text-center">{{ 'error_pages.500.text'|trans }}</h1>
            <h2 class="text-center">{{ 'error_pages.500.title'|trans }}</h2>
            <p class="text-center">{{ 'error_pages.500.subtitle1'|trans }}
                <a href="{{ path('index', {'_locale': app.request.locale}) }}">{{ 'error_pages.500.homepage'|trans }}</a> {{ 'error_pages.500.subtitle2'|trans }}
