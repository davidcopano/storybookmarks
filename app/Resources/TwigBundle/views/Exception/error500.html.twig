            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <p>storybookmarks</p>
                </div>
                <div class="col-md-6 col-sm-6">
                    <p class="text-right">{{ 'now'|date('Y') }} <span class="copyleft">&copy;</span></p>
